<h2>Add a Board</h2>
@model Board
<form asp-action="CreateBoard" asp-controller="Home" method="post">
    <div class="container">
        <div class="row">
            <div class="col1">
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Image" class="mb-2"></label>
                    <input asp-for="Image" class="form-control mb-5">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Title" class="mb-2"></label>
                    <input asp-for="Title" class="form-control mb-5">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Price" class="mb-2"></label>
                    <input asp-for="Price" class="form-control mb-5">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col2">
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Quantity" class="mb-2"></label>
                    <input asp-for="Quantity" class="form-control mb-5">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Rating" class="mb-2"></label>
                    <select asp-for="Rating" class="form-control mb-5">
                        <option selected hidden disabled>Select</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="col-3 d-flex flex-column">
                    <label asp-for="Description" class="mb-2"></label>
                    <input asp-for="Description" class="form-control mb-5">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="submit" value="Add Board" class="btn btn-info">
    </div>
</form>